
@model WebDL.Context.Reservation
@{
    ViewBag.Title = "Home Page";
}

<head>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script>
        $(document).ready(function () {
            $('.slick-slider').slick({
                slidesToShow: 3,
                slidesToScroll: 1,
                autoplay: true,
                autoplaySpeed: 2000,
                dots: true,
                arrows: true,
                responsive: [
                    {
                        breakpoint: 1024,
                        settings: {
                            slidesToShow: 2
                        }
                    },
                    {
                        breakpoint: 768,
                        settings: {
                            slidesToShow: 1
                        }
                    }
                ]
            });
        });
    </script>
</head>
<header id="gtco-header" class="gtco-cover gtco-cover-md" role="banner" style="background-image: url(images/img_bg_2.jpg)">
    <nav class="gtco-nav" role="navigation">
        <div class="gtco-container">
            <div class="row">
                <div class="col-sm-4 col-xs-12">
                    <div id="gtco-logo"><a href="~/Home/Index">Traveler <em>.</em></a></div>
                </div>
                <div class="col-xs-8 text-right menu-1">
                    <ul>
                        <li><a href="~/Destination/Destination">Điểm Đến</a></li>
                        <li class="has-dropdown">
                            <a href="#">Du Lịch</a>

                        </li>
                        <li><a href="~/Pricing/Pricing">Giá Cả</a></li>
                        <li><a href="~/Contact/Contact">Liên Hệ</a></li>
                        <li><a href="signup.html">Đăng Ký</a></li>
                        <li><a href="login.html">Đăng Nhập</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <div>
        @using (Html.BeginForm("Submit", "Home", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
        {
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title text-center mb-4">Đăng Ký Tour Du Lịch</h5>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.FullName, new { @class = "form-label" })
                                    @Html.TextBoxFor(model => model.FullName, new { @class = "form-control", placeholder = "Nhập tên của bạn", required = "required" })
                                    @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "invalid-feedback" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Email, new { @class = "form-label" })
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Nhập email của bạn", type = "email", required = "required" })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "invalid-feedback" })
                                </div>

                                <div class="form-row">
                                    <div class="col-md-6">
                                        @Html.LabelFor(model => model.StartDate, new { @class = "form-label" })
                                        @Html.TextBoxFor(model => model.StartDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", required = "required" })
                                        @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "invalid-feedback" })
                                    </div>
                                    <div class="col-md-6">
                                        @Html.LabelFor(model => model.EndDate, new { @class = "form-label" })
                                        @Html.TextBoxFor(model => model.EndDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", required = "required" })
                                        @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "invalid-feedback" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Destination, new { @class = "form-label" })
                                   @* @Html.DropDownListFor(model => model.Destination, new SelectList(ViewBag.Destinations, "Value", "Text"), "Chọn điểm đến", new { @class = "form-control", required = "required" })*@
                                    @Html.ValidationMessageFor(model => model.Destination, "", new { @class = "invalid-feedback" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Participants, new { @class = "form-label" })
                                    @Html.TextBoxFor(model => model.Participants, new { @class = "form-control", placeholder = "1", type = "number", min = "1", required = "required" })
                                    @Html.ValidationMessageFor(model => model.Participants, "", new { @class = "invalid-feedback" })
                                </div>

                                <div class="form-group mt-4">
                                    <button type="submit" class="btn btn-primary btn-block">Gửi Đăng Ký</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</header>

