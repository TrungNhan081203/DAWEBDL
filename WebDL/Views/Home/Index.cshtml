@model WebDL.Context.Reservation

@{
    ViewBag.Title = "Home Page";
}

<style>
    body {
        font-family: 'Times New Roman', Times, serif;
        margin: 0;
        padding: 0;
        font-size:20px;
    }

    .custom-heading {
        text-align: center;
        padding: 20px;
        color: #fff; /* Màu chữ */
        max-width: 600px; /* Độ rộng tối đa */
        margin: 50px auto; /* Căn giữa */
    }

        .custom-heading h1 {
            margin: 0;
            font-size: 32px; /* Cỡ chữ */
        }

        .custom-heading p {
            font-style: italic;
            color: #fff; /* Màu chữ */
        }
        :root {
	        font-family: "Montserrat", "Arial", sans-serif;
	        //font-size: 7em;

	        --color: #fff;
	        --color-accent-1: hsl(0, 0%, 0%);
	        --color-accent-2: hsl(0, 0%, 0%);
        }

        h1 {
	        filter: drop-shadow(0.15em 0.1em 0.3em var(--color-accent-2));
	        color: var(--color);

	        width: min(70%, 1000px);
	        min-width: fit-content;

	        transition: all ease-out 100ms;
	        padding: 0 0.3em;
	        font-weight: 800;

	        /* 	touch-action: none; */
	        text-transform: uppercase;

	        opacity: 1;/* không được để bằng  0, =0 thì các h1 bị trong suốt*/
	        animation: fade-in ease-out 300ms 1.2s forwards;
        }

/* === to make things look pretty === */
        * {
	        box-sizing: border-box;
	        padding: 0;
	        margin: 0;
        }


        ::selection {
	        color: var(--color);
	        background-color: var(--color-accent-2);
        }
    .form-control {
        font-size:15px;
    }
    input[type="submit"] {
        width: 100%;
        padding: 10px;
        margin: 10px 0;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
        font-size: 15px;
    }

    input[type="submit"] {
        background: #4CAF50;
        color: white;
        border: none;
        cursor: pointer;
        transition: background 0.3s ease;
    }

    input[type="submit"]:hover {
            background: #45a049;
        }
</style>
<header id="gtco-header" class="gtco-cover gtco-cover-sm" role="banner" style="height: 1100px" >
    <div class="overlay" style="background-image:url('/Content/images/background_3.jpg'); background-size: cover"></div>
    <div class="gtco-container" style="position: relative; top: 180px; left: 20px">
        <div class="row">
            <div class="col-md-12 col-md-offset-0 text-left">
                <div class="row row-mt-15em">
                    <div class="col-md-7 mt-text animate-box" data-animate-effect="fadeInUp">
                        <h1 class="custom-heading">Hãy bắt đầu hành trình khám phá thế giới ngay bây giờ</h1>
                    </div>
                    <div class="col-md-5 col-md-push-1 animate-box" data-animate-effect="fadeInRight">
                        <div class="form-wrap">
                            <div class="tab">
                                <div class="tab-content">
                                    <div class="tab-content-inner active" data-content="signup">
                                        <h3>Đặt Chuyến Đi Của Bạn</h3>
                                        @using (Html.BeginForm("SubmitForm", "Home", FormMethod.Post))
                                        {
                                            <div class="row form-group">
                                                <div class="col-md-12">
                                                    @Html.LabelFor(model => model.FullName, "Họ và tên")
                                                    @Html.TextBoxFor(model => model.FullName, new { @class = "form-control", placeholder = "Nhập tên của bạn", required = "required" })
                                                    @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "invalid-feedback" })
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col-md-12">
                                                    @Html.LabelFor(model => model.Email, new { @class = "form-label" })
                                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Nhập email của bạn", type = "email", required = "required" })
                                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "invalid-feedback" })
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col-md-6">
                                                    @Html.LabelFor(model => model.StartDate, "Ngày khởi hành")
                                                    @Html.TextBoxFor(model => model.StartDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", required = "required" })
                                                    @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "invalid-feedback" })
                                                </div>
                                                <div class="col-md-6">
                                                    @Html.LabelFor(model => model.EndDate, "Ngày kết thúc")
                                                    @Html.TextBoxFor(model => model.EndDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", required = "required" })
                                                    @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "invalid-feedback" })
                                                </div>
                                            </div>

                                            <div class="row form-group">
                                                <div class="col-md-12">
                                                    <label for="destination">Điểm Đến</label>

                                                    @Html.LabelFor(model => model.Destination, "Điểm đến")
                                                    @Html.DropDownListFor(model => model.Destination, new SelectList(ViewBag.DiemDen, "TenDiemDen", "TenDiemDen"), "Chọn điểm đến", new { @class = "form-control", required = "required" })
                                                    @Html.ValidationMessageFor(model => model.Destination, "", new { @class = "invalid-feedback" })
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col-md-12">
                                                    @Html.LabelFor(model => model.Participants, "Số lượng người")
                                                    @Html.TextBoxFor(model => model.Participants, new { @class = "form-control", placeholder = "1", type = "number", min = "1", required = "required" })
                                                    @Html.ValidationMessageFor(model => model.Participants, "", new { @class = "invalid-feedback" })
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col-md-12">
                                                    <input type="submit" class="btn btn-primary btn-block" value="Gửi">
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</header>


