    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f7f7f7;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-form {
            background: #e0f7e9;
            padding: 40px;
            margin: auto;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 500px;
            height: 700px;
            /*animation: fadeIn 1s ease-in-out;*/
        }

        .login-form h2 {
            margin: 0 0 20px;
            color: #4CAF50;
            text-align: center;
        }

        .login-form label {
            color: #4CAF50;
            margin-bottom: 5px;
            display: block;
        }

        .login-form input[type="text"],
        .login-form input[type="password"],
        .login-form input[type="submit"] {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        .login-form input[type="submit"] {
            background: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        .login-form input[type="submit"]:hover {
            background: #45a049;
        }

        .login-form input[type="button"] {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        .login-form input[type="button"] {
            background: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        .login-form input[type="button"]:hover {
            background: #45a049;
        }

        .login-form .text-danger {
            color: #e74c3c;
        }

        .alert {
            color: #e74c3c;
            margin-top: 10px;
        }

        .forgot-password {
            text-align: left;
            margin-bottom: 10px;
        }

        .forgot-password a {
            color: #4CAF50;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .forgot-password a:hover {
            color: #45a049;
        }

        .social-buttons {
            display: flex;
            flex-direction: column;
            gap: 10px;
            margin: 20px 0;
        }

        .social-buttons a {
            display: block;
            padding: 10px;
            text-align: center;
            color: white;
            border-radius: 5px;
            text-decoration: none;
            transition: background 0.3s ease;
        }

        .facebook-button {
            background: #3b5998;
        }

        .facebook-button:hover {
            background: #334d84;
         }

        .google-button {
            background: #db4437;
        }

        .google-button:hover {
            background: #c23321;
        }
    </style>
    
</head>
<body>


    <div class="gtco-loader"></div>

    <div id="page" style="background-image: url('/Content/images/booking.jpg'); background-size: cover; height: 1100px ">
        <header id="gtco-header" class="gtco-cover gtco-cover-sm" role="banner" style="background-image: url(~/Content/images/img_bg_3.jpg); height:50px">
        </header>
        <div class="hello">
            <h1>.</h1>
        </div>
        <div class="login-form">
            <h2>Đăng nhập</h2>
            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div>
                    @Html.LabelFor(m => m.TenDangNhap, "Tên Đăng Nhập")
                    <div>
                        @Html.TextBoxFor(m => m.TenDangNhap, new { placeholder = "Tài khoản" })
                        <div style="float:right">
                            @Html.ValidationMessageFor(m => m.TenDangNhap, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div>
                    @Html.LabelFor(m => m.MatKhau, "Mật Khẩu")
                    <div>
                        @Html.PasswordFor(m => m.MatKhau, new { placeholder = "Password" })
                        <div style="float:right">
                            @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div>
                    <a href="" style="margin-left: 10px; ">Lấy lại mật khẩu</a>
                </div>
                <div>
                    <div style="display: flex; gap: 10px;">
                        <input type="submit" value="Login" />
                        <input type="button" value="Register" id="registerButton" />
                    </div>
                    <script>
                        document.getElementById("registerButton").onclick = function () {
                            window.location.href = '@Url.Action("Register", "Home")';
                        };
                    </script>
                </div>
                if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["Error"]
                    </div>
                }
                <div class="social-buttons" style="display: flex; gap: 10px;">
                    <a href="https://www.facebook.com/" class="facebook-button">Continue with Facebook</a>
                    <a href="https://mail.google.com/" class="google-button">Continue with Google</a>
                </div>

                if (ViewBag.Error != null)
                {
                    <div class="alert">
                        @ViewBag.Error
                    </div>
                }
            }
        </div>
    </div>



