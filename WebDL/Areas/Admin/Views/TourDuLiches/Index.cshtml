@model IEnumerable<WebDL.Context.TourDuLich>

@{
    ViewBag.Title = "Danh sách Tour";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    // Tính tổng số trang dựa trên số lượng doanh mục
    int totalItems = Model.Count();
    int itemsPerPage = 6; // Số mục trên mỗi trang
    int totalPages = (int)Math.Ceiling((double)totalItems / itemsPerPage);
}

<style>
    .table-responsive {
        overflow-x: auto;
    }

    .table {
        width: 100%;
        margin-bottom: 1rem;
        background-color: #fff;
        border-collapse: collapse;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

        .table th,
        .table td {
            padding: 1rem;
            vertical-align: middle;
            border-top: 1px solid #dee2e6;
        }

        .table thead th {
            background-color: #f8f9fa;
            border-bottom: 2px solid #dee2e6;
            text-align: center;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f2f2f2;
    }

    .table-bordered {
        border: 1px solid #dee2e6;
    }

        .table-bordered th,
        .table-bordered td {
            border: 1px solid #dee2e6;
        }

    .table-hover tbody tr:hover {
        background-color: #e9ecef;
    }

    .table-wrapper {
        float: right;
        width: calc(100% - 30px);
        margin-right: -50px;
    }

    .btn {
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
        border-radius: 0.25rem;
    }

    .btn-primary {
        color: #fff;
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0069d9;
            border-color: #0062cc;
        }

    .btn-info {
        color: #fff;
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

        .btn-info:hover {
            background-color: #138496;
            border-color: #117a8b;
        }

    .btn-danger {
        color: #fff;
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }

    .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
        margin-bottom: 20px;
    }

        .pagination a {
            color: #007bff;
            padding: 8px 16px;
            text-decoration: none;
            transition: background-color 0.3s;
            border: 1px solid #ddd;
            margin: 0 4px;
        }

            .pagination a.active {
                background-color: #007bff;
                color: white;
                border: 1px solid #007bff;
            }

            .pagination a:hover:not(.active) {
                background-color: #ddd;
            }

    .container {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
    }

    .table th,
    .table td {
        min-width: 100px;
    }

        .table th:last-child,
        .table td:last-child {
            white-space: nowrap;
            min-width: 220px; /* Đảm bảo cột cuối cùng đủ rộng để chứa các nút */
        }
</style>

<div class="container">
    <div class="mb-4" style="text-align: right; margin-right: 30px;">
        @Html.ActionLink("Tạo mới", "Create", null, new { @class = "btn btn-primary" })
    </div>

    <div class="mb-4">
        @using (Html.BeginForm("Index", "TourDuLiches", FormMethod.Get, new { @class = "form-inline float-right" }))
        {
            <div class="input-group" style="max-width: 300px;">
                <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm..." value="@ViewBag.CurrentFilter" />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-default">Tìm kiếm</button>
                </div>
            </div>
        }
    </div>

    @if (!String.IsNullOrEmpty(ViewBag.CurrentFilter as string))
    {
        <div class="text-right mb-4">
            <a href="@Url.Action("Index", "TourDuLiches")" class="btn btn-secondary">Quay lại</a>
        </div>
    }

    <div class="table-responsive table-wrapper">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Tên Tour</th>
                    <th>Mô Tả</th>
                    <th>Giá</th>
                    <th>Ngày Bắt Đầu</th>
                    <th>Ngày Kết Thúc</th>
                    <th>Link Ảnh</th>
                    <th>Điểm Đến</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.TenTour)</td>
                        <td>@Html.DisplayFor(modelItem => item.MoTa)</td>
                        <td>@String.Format("{0:N0}", item.Gia)</td> 
                        <td>@Html.DisplayFor(modelItem => item.NgayBatDau)</td>
                        <td>@Html.DisplayFor(modelItem => item.NgayKetThuc)</td>
                        <td>@Html.DisplayFor(modelItem => item.LinkAnh)</td>
                        <td>@Html.DisplayFor(modelItem => item.DiemDen.TenDiemDen)</td>
                        <td>
                            @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MaTour }, new { @class = "btn btn-primary btn-sm" })
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.MaTour }, new { @class = "btn btn-info btn-sm" })
                            @Html.ActionLink("Xóa", "Delete", new { id = item.MaTour }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="pagination">
            <a href="#" class="prev">&laquo; Trước</a>
            @for (int i = 1; i <= totalPages; i++)
            {
                <a href="#" class="@(i == 1 ? "active" : "")">@i</a>
            }
            <a href="#">Tiếp &raquo;</a>
        </div>
    </div>
</div>
