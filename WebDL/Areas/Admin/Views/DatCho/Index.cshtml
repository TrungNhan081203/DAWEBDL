@model IEnumerable<WebDL.Context.DatCho>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    // Tính tổng số trang dựa trên số lượng doanh mục
    int totalItems = Model.Count();
    int itemsPerPage = 6; // Số mục trên mỗi trang
    int totalPages = (int)Math.Ceiling((double)totalItems / itemsPerPage);
}
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
    }

    .index-container {
        max-width: 900px;
        margin: 50px auto;
        padding: 20px;
        background-color: #ffffff;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .index-container h2 {
            font-size: 24px;
            margin-bottom: 20px;
            color: #333333;
        }

    .table {
        width: 100%;
        margin-top: 20px; /* Dịch chuyển bảng lên trên */
        margin-bottom: 20px; /* Dịch chuyển bảng xuống dưới */
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 10px;
            text-align: center;
            border: 1px solid #dddddd;
        }

        .table th {
            background-color: #f2f2f2;
            color: #333333;
            font-weight: bold;
        }

        .table td {
            background-color: #ffffff;
        }

    .action-links a {
        color: #007bff;
        margin-right: 10px;
        text-decoration: none;
    }

        .action-links a:hover {
            text-decoration: underline;
        }

    /* Phân trang */
    .pagination {
        display: flex;
        justify-content: center; /* Canh giữa nút phân trang */
        align-items: center;
        margin-top: 20px; /* Khoảng cách từ bảng đến phân trang */
        margin-bottom: 20px; /* Khoảng cách phân trang đến bảng */
    }

        .pagination a {
            color: #007bff;
            padding: 8px 16px;
            text-decoration: none;
            transition: background-color .3s;
            border: 1px solid #ddd;
            margin: 0 4px;
        }

            .pagination a.active {
                background-color: #007bff;
                color: white;
                border: 1px solid #007bff;
            }

            .pagination a:hover:not(.active) {
                background-color: #ddd;
            }

    /* Bootstrap button classes */
    .btn {
        display: inline-block;
        font-weight: 400;
        color: #fff;
        text-align: center;
        vertical-align: middle;
        user-select: none;
        background-color: #007bff;
        border: 1px solid transparent;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        line-height: 1.5;
        border-radius: 0.25rem;
        transition: color 0.15s, background-color 0.15s, border-color 0.15s, box-shadow 0.15s;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0069d9;
            border-color: #0062cc;
        }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

        .btn-info:hover {
            background-color: #138496;
            border-color: #117a8b;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }
</style>

<div class="index-container">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </p>

    <div class="mb-4">
        @using (Html.BeginForm("Index", "TourDuLiches", FormMethod.Get, new { @class = "form-inline float-right" }))
        {
            <div class="input-group" style="max-width: 300px;">
                <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm..." value="@ViewBag.CurrentFilter" />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-default">Tìm kiếm</button>
                </div>
            </div>
        }
    </div>

    @if (!String.IsNullOrEmpty(ViewBag.CurrentFilter as string))
    {
        <div class="text-right mb-4">
            <a href="@Url.Action("Index", "TourDuLiches")" class="btn btn-secondary">Quay lại</a>
        </div>
    }

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SoLuongNguoi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayDat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrangThai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NguoiDung.TenDangNhap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TourDuLich.TenTour)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuongNguoi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayDat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrangThai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NguoiDung.TenDangNhap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TourDuLich.TenTour)
                </td>
                <td class="action-links">
                    @Html.ActionLink("Edit", "Edit", new { id = item.MaDatCho }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Details", "Details", new { id = item.MaDatCho }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.MaDatCho }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </table>

    <div class="pagination">
        <a href="#" class="prev">&laquo; Trước</a>
        @for (int i = 1; i <= totalPages; i++)
        {
            <a href="#" class="@(i == 1 ? "active" : "")">@i</a>
        }
        <a href="#">Tiếp &raquo;</a>
    </div>
</div>